        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="bt_login"
                                    Storyboard.TargetProperty="Width"
                                    From="80"
