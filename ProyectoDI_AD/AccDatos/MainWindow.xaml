                                    Duration="0:0:2"                                                            
                                    AutoReverse="True" 
                                    RepeatBehavior="Forever"/>
                     --><!--Esto la realiza siempre aunque no este dentro del StackPanel..... />--><!--
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>-->

</Window>
